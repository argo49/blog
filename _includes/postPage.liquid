<!doctype html>
<html lang="en">
    {% include head.liquid %}
    <body class="markdown-body">
        <div id="top"></div>
        {% include logo.liquid %}
        <h1>{{ pageTitle }}</h1>
        <p>
        <div>Published on <time datetime="{{page.date}}">{{page.date | date: "%Y-%m-%d"}}</time></div>
        {% if lastUpdated %}
            <div>Last updated on <time datetime="{{lastUpdated}}">{{lastUpdated}}</time></div>
        {% endif %}
        </p>
        {{ content }}
        <a href="/">Back Home</a>
        <span class="link-spacer">|</span>
        <a id="back-to-top" href="#top">Back To Top</a>
        <span class="link-spacer">|</span>
        <a href="{{ "https://github.com/argo49/blog/blob/master/" | append: page.inputPath | remove_first: "./"}}">View on GitHub</a>
        {% include scripts.liquid %}
        {% include analytics.liquid %}
    </body>
</html>
